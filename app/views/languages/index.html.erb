<p id="notice"><%= notice %></p>

<h1>Languages</h1>

<div>
  <%= link_to 'New Language', new_language_path %>
</div>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Key</th>
      <th>Chrome TTS Key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= language.language_key %></td>
        <td><%= language.tts_key %></td>
        <td><%= link_to 'Show', language %></td>
        <td><%= link_to 'Edit', edit_language_path(language) %></td>
        <td><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>