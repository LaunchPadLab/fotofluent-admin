<h1>Translations</h1>

<div>
  <%= link_to 'New Translation', new_translation_path %>
</div>
<br>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>EN Word</th>
      <th>Foreign Word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @translations.each do |translation| %>
      <tr>
        <td><%= translation.language.name %></td>
        <td><%= translation.word.word %></td>
        <td><%= translation.foreign_word %></td>
        <td><%= link_to 'Show', translation %></td>
        <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
        <td><%= link_to 'Destroy', translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>