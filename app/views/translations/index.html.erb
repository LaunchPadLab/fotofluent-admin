<p id="notice"><%= notice %></p>

<h1>Translations</h1>

<table>
  <thead>
    <tr>
      <th>Foreign Word</th>
      <th>Foreign Pronunciation</th>
      <th>Word</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @translations.each do |translation| %>
      <tr>
        <td><%= translation.foreign_word %></td>
        <td><%= translation.foreign_pronunciation %></td>
        <td><%= translation.word %></td>
        <td><%= translation.language %></td>
        <td><%= link_to 'Show', translation %></td>
        <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
        <td><%= link_to 'Destroy', translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

