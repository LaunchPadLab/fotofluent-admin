<%= form_with(model: word, local: true) do |form| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :word %>
    <%= form.text_field :word, id: :word_word %>
  </div>

  <h4>Add an image link OR upload the image file (not both!)</h4>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_area :image, id: :word_image %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, id: :word_photo %>
  </div>

  <div class="field">
    <%= form.label :grouping %>
    <%= form.text_area :grouping, id: :word_grouping %>
  </div>

  <div class="field">
    <p><strong>Translations</strong></p>
    <%= form.fields_for :translations do |translation| %>
      <%= render 'translation_fields', f: translation %>
    <% end %>

    <div class="link">
      <%= link_to_add_association 'Add Translation', form, :translations %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
