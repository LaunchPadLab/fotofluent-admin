<p id="notice"><%= notice %></p>

<h1>Words</h1>

<div>
  <%= link_to 'New Word', new_word_path %>
</div>
<br>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Image</th>
      <th>Grouping</th>
      <th>Pronunciation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word %></td>
        <td><%= image_tag word.image, width: 100 %></td>
        <td><%= word.grouping %></td>
        <td><%= word.pronunciation %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>